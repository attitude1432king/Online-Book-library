



<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">


    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <script src="https://kit.fontawesome.com/f6cb5c52ed.js" crossorigin="anonymous"></script>

    <link href="~/Content/CSS/AdminRegister/style.css" rel="stylesheet" />

</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <div class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="fa-solid fa-person fa-xl"></i></label>
                                <input type="text" name="name" id="name" placeholder="Your Name" />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="fa-solid fa-envelope fa-xl"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email" />
                            </div>

                            <div class="form-control">
                                <label for="gender" class="" style="margin-left:500px;"></label>
                                <div class="col-md-10" style="margin-bottom:15px;">
                                    <span style="font-size:14px; font-weight:600">Male</span><input type="radio" name="gender" value="Male" id="txtMale" class="radio" style="width: 25px; display: inline; font-family: Poppins;" />
                                    <span style="font-size:14px; font-weight:600">Female</span><input type="radio" name="gender" value="Female" id="txtFemale" class="radio" style="width: 25px; display: inline; font-family: Poppins;" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="college"><i class="fa-solid fa-envelope fa-xl"></i></label>
                                <input type="text" name="college" id="college" placeholder="Your College Name" />
                            </div>

                            <div class="form-group">
                                <label for="dept"><i class="fa-solid fa-envelope fa-xl"></i></label>
                                @* <input type="text" name="dept" id="dept" placeholder="Your College Name" />*@
                                <div style="margin-left:20px">
                                    <select id="drop" class="dropdown">
                                        <option value="Computer">Computer</option>
                                        <option value="Electrical">Electrical</option>
                                        <option value="Chemical">Chemical</option>
                                        <option value="Mechanical">Mechanical</option>
                                        <option value="Civil">Civil</option>
                                    </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="contact"><i class="fa-solid fa-envelope fa-xl"></i></label>
                                    <input type="text" name="contact" id="contact" placeholder="Your Contact Number" />
                                </div>

                                <div class="form-group">
                                    <label for="pass"><i class="fa-solid fa-lock fa-xl"></i></label>
                                    <input type="password" name="pass" id="pass" placeholder="Password" />
                                </div>

                                <div class="form-group">
                                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                                </div>
                                <div class="form-group form-button">
                                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                </div>
</div>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Content/images/signup-image.jpg" alt="sing up image"></figure>

                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>



    </div>

    <!-- JS -->

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#signup").click(function () {
               
                var register = {
                    c_student_name: $("#name").val(),
                    c_student_email: $("#email").val(),
                    c_student_gender: $('input[name="gender"]:checked').val(),
                    c_student_college: $("#college").val(),
                    c_student_department: $("#drop").val(),
                    c_student_contact: $("#contact").val(),
                    c_student_pass: $("#pass").val()
                }

                var setting = {
                    "url": "/Student/StudentRegister/",
                    "method": "post",
                    "timeout": 0,
                    "headers": {
                        "Content-Type": "application/json"
                    },
                    "data": JSON.stringify(register)
                };

                console.log(register);

                $.ajax(setting).done(function (response) {
                    alert("Registered Successfully");
                });

            });
        });
    </script>


</body>
</html> 